# Real-Time Voice Assistant Configuration

# Application Settings
APP_MODE=language-learning
DEBUG=False
LOG_LEVEL=INFO

# Audio Configuration
SAMPLE_RATE=16000
CHANNELS=1
CHUNK_SIZE=1024
AUDIO_FORMAT=int16

# Model Paths
WHISPER_MODEL=base.en
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
NLP_MODEL=distilbert-base-uncased
SPACY_MODEL=en_core_web_sm

# Performance Settings
USE_GPU=True
MAX_WORKERS=4
ENABLE_CACHING=True
CACHE_SIZE=1000

# Latency Optimization
ENABLE_STREAMING=True
PREDICTIVE_PROCESSING=True
PARALLEL_PIPELINE=True
VAD_AGGRESSIVENESS=3

# Language Learning Settings
DEFAULT_LANGUAGE=spanish
DIFFICULTY_LEVEL=intermediate
ENABLE_PRONUNCIATION_FEEDBACK=True
ENABLE_GRAMMAR_CORRECTION=True

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
WEBSOCKET_ENABLED=True

# Cloud Fallback (Optional)
ENABLE_CLOUD_FALLBACK=False
CLOUD_API_KEY=your_api_key_here
